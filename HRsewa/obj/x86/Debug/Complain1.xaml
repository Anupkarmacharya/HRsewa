<Page
    x:Class="HRsewa.Complain1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HRsewa"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="White">
        <StackPanel Margin="10">
            <TextBlock Text="HRsewa" FontSize="25"/>
            <TextBlock Text="Complain Issues" />
            <StackPanel Margin="5,20,0,0">
                <StackPanel Orientation="Horizontal" Margin="0,20,10,0">
                    <TextBlock Text="Full Name: " Width="100" />
                    <TextBox x:ConnectionId='7' x:Name="NameInput" Width="300" BorderThickness=".5" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,20,10,0">
                    <TextBlock Text="Age: " Width="100" />
                    <TextBox x:ConnectionId='6' x:Name="AgeInput" Width="300" BorderThickness=".5" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,20,10,0">
                    <TextBlock Text="Email ID: " Width="100" />
                    <TextBox x:ConnectionId='5' x:Name="EmailInput" Width="300" BorderThickness=".5" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,20,10,0">
                    <TextBlock Text="Contact No.: " Width="100" />
                    <TextBox x:ConnectionId='4' x:Name="ContactInput" Width="300" BorderThickness=".5" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,20,10,0">
                    <TextBlock Text="Nationality: " Width="100" />
                    <TextBox x:ConnectionId='3' x:Name="NationalityInput" Width="300" BorderThickness=".5" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,20,10,0">
                    <TextBlock Text="Issues: " Width="100" />
                    <ScrollViewer Height="300" Width="300">
                        <TextBox x:ConnectionId='2' x:Name="IssueInput" Width="300" BorderThickness=".5" />

                    </ScrollViewer>
                     </StackPanel>
            </StackPanel>
            <Button x:ConnectionId='1' Content="Submit" Margin="20,20,0,0"                     />
        </StackPanel>
    </Grid>
</Page>

